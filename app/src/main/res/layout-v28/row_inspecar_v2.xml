<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardCarInspec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtViewPredTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="125dp"
            android:text="NA"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtViewTituloTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="125dp"
            android:text="O estilo é:"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtViewPredCarAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="20dp"
            android:text="NA"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtViewTituloCarAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="Veículo: "
            android:textColor="#2196F3"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/txtViewTituloTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:gravity="start"
            android:text="Severidade: "
            android:textColor="#2136F3"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtViewPredTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="260dp"
            android:text="NA" />

        <TextView
            android:id="@+id/txtViewTituloTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:gravity="start"
            android:text="Tipo: "
            android:textColor="#2136F3"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtViewPredTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="290dp"
            android:text="NA" />

        <TextView
            android:id="@+id/txtViewTituloDanoAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="235dp"
            android:gravity="start"
            android:text="Danificado: "
            android:textColor="#2136F3"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtViewPredDanoAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="235dp"
            android:text="NA" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="384dp"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/contornofundo" />

        <ImageView
            android:id="@+id/imageViewAut"
            android:layout_width="340dp"
            android:layout_height="218dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/carroestrutura"></ImageView>

        <ImageButton
            android:id="@+id/imageButtonTrash"
            android:layout_width="90dp"
            android:layout_height="128dp"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_delete_trash" />

        <Switch
            android:id="@+id/switchDiscorda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="320dp"
            android:text="Discorda?" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>